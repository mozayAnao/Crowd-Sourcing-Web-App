<%include header%>
<body>
    <div class="app">
        <form class="frm" action="/login/admin" method="post">
            <div>
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>
                <h1>Login</h1>
            </div>
            <div class="form-group">
                <label for="">Username: </label>
                <input 
                    type="text" 
                    name="username"
                    id="username"
                    placeholder="Enter your username" 
                    required>
            </div>
            <div class="form-group">
                <label for="">Password:</label>
                <input 
                    type="password"
                    name="password"
                    id="password"
                    placeholder="Enter your password"
                    required>
            </div>
            <div>
                <input type="submit" value="Login ">
            </div>
        </form>
    </div>
</body>