                        <br>
                        
                        
                            
                       
                        <div>
                            <div id="prj2" type="button" data-bs-toggle="modal" data-bs-target="#updateAddress" title="Click to Edit"><b>Country:</b> <%=address[0].country%></div>
                            <div id="prj2" type="button" data-bs-toggle="modal" data-bs-target="#updateAddress" title="Click to Edit"><b>Region:</b> <%=address[0].region%></div>
                            <div id="prj2" type="button" data-bs-toggle="modal" data-bs-target="#updateAddress" title="Click to Edit"><b>GPS Location:</b> <%=address[0].gpsCordinates%></div>
