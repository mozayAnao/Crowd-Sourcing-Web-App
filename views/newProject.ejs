                        <div></div>
                        <!-- <%if(projectFunding[0].amountRecieved == null) {%>
                            <%var percent = 0;%>
                            <div class="progress mb-2">
                                <div class="progress-bar bg-success" role="progressbar" aria-valuenow="55" aria-valuemin="91" aria-valuemax="100" style="width:'<%=percent%>%'"><%=percent%>%</div>
                             </div>
                        <%}else {%> -->
