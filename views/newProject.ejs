                            <div class="mb-3">
                              <label for="description" class="form-label">Project Description</label>
                              <textarea 
                                name="description" 
                                id="description" 
                                cols="50" 
                                rows="10" 
                                placeholder="State the aimed result of you project" 
                                required><%=projectDetails[0].description%>
                              </textarea>
                              <!-- <div id="emailHelp" class="form-text"><ion-icon name="logo-youtube"></ion-icon></div> -->
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                          </form>
                    </div>
                </div>
              </div>
            
               <!-- Modal -->
            <div class="modal fade" id="updateAimedResult" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
